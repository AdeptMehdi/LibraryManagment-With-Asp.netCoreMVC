@model LibraryManagement.Models.Loan

@{
    ViewData["Title"] = "Return Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Return Book</h1>

<h4>Loan Info</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Book.Title by @Model.Book.Author</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User.FullName</dd>

        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToString("yyyy/MM/dd")</dd>
    </dl>
</div>

<form asp-action="Return" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Confirm Return</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>