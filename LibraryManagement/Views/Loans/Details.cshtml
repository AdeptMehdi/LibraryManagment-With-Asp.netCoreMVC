@model LibraryManagement.Models.Loan

@{
    ViewData["Title"] = "Loan Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-book-reader"></i> Loan Details</h1>

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        <strong>Loan Info</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3"><i class="fas fa-book"></i> Book</dt>
            <dd class="col-sm-9">@Model.Book.Title by @Model.Book.Author</dd>

            <dt class="col-sm-3"><i class="fas fa-user"></i> User</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>

            <dt class="col-sm-3"><i class="fas fa-calendar-alt"></i> Loan Date</dt>
            <dd class="col-sm-9">@Model.LoanDate.ToString("yyyy/MM/dd HH:mm")</dd>

            <dt class="col-sm-3"><i class="fas fa-undo"></i> Return Date</dt>
            <dd class="col-sm-9">
                @Html.Raw(Model.ReturnDate.HasValue 
                    ? Model.ReturnDate.Value.ToString("yyyy/MM/dd HH:mm") 
                    : "<span class='badge bg-warning text-dark'>Pending</span>")
            </dd>

            <dt class="col-sm-3"><i class="fas fa-info-circle"></i> Status</dt>
            <dd class="col-sm-9">
                @Html.Raw(Model.ReturnDate.HasValue 
                    ? "<span class='badge bg-success'>Returned</span>" 
                    : "<span class='badge bg-warning text-dark'>Pending</span>")
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </div>
</div>