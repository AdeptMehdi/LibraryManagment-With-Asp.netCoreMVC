@model IEnumerable<LibraryManagement.Models.Loan>

@{
    ViewData["Title"] = "Loans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Loans</h1>

<div class="mb-3">
    <span>Filter by status: </span>
    <a asp-action="Index" asp-route-statusFilter="All" class="btn btn-outline-primary btn-sm">All</a>
    <a asp-action="Index" asp-route-statusFilter="Returned" class="btn btn-outline-success btn-sm">Returned</a>
    <a asp-action="Index" asp-route-statusFilter="Pending" class="btn btn-outline-warning btn-sm">Pending</a>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Book</th>
            <th>User</th>
            <th>Loan Date</th>
            <th>Return Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Book.Title</strong> by @item.Book.Author</td>
                <td>@item.User.FullName</td>
                <td>@item.LoanDate.ToString("yyyy/MM/dd HH:mm")</td>
                <td>
                    @if (item.ReturnDate != null)
                    {
                        <span class="text-success"><i class="fas fa-check-circle"></i> @item.ReturnDate.Value.ToString("yyyy/MM/dd HH:mm")</span>
                    }
                    else
                    {
                        <span class="text-danger"><i class="fas fa-hourglass-half"></i> Not returned</span>
                    }
            </td>
            <td>
                @(item.Book.IsAvailable
                                ? (Html.Raw("<span class='badge bg-success'><i class='fas fa-book'></i> Available</span>"))
                                : (Html.Raw("<span class='badge bg-warning text-dark'><i class='fas fa-book-reader'></i> Loaned</span>"))
                                )
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                    <i class="fas fa-edit"></i> Edit
                </a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i> Details
                    </a>

                @if (item.ReturnDate == null)
                    {
                        <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-sm btn-success me-1">
                            <i class="fas fa-undo-alt"></i> Return
                        </a>
                    }

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
