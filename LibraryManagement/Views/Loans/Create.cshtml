@model LibraryManagement.Models.Loan

@{
    ViewData["Title"] = "Create Loan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ثبت امانت جدید</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BookId"></label>
        <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
    </div>
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
    </div>
    <div class="form-group">
        <label asp-for="LoanDate"></label>
        <input asp-for="LoanDate" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">ثبت امانت</button>
</form>