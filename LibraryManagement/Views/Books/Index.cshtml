@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4"><i class="fas fa-book"></i> Books</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Book
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
        <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>
                @if (book.IsAvailable)
                {
                    <span class="badge bg-success"><i class="fas fa-check"></i> Available</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half"></i> Loaned</span>
                }
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary me-1">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info me-1">
                    <i class="fas fa-eye"></i> Details
                </a>
                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>